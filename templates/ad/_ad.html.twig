{% set url = path('ads_show', {'id': ad.id }) %}

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header text-center">
                <strong> {{ ad.price | number_format(2, ',', ' ')}}&euro; </strong> <br>

                    <small>Pas encore not√©</small>     

                </div>
                    <a href="{{ url }}">
                        <img src="{{ ad.coverImage }}" alt="Image de l'article" style="height: 200px; width: 100%; display: block ">
                    </a>
                

                <div class="card-body">
                    <h4 class="card-title">
                    <a href="{{ url }}">
                    {{ ad.title }}
                    </a>
                    
                    </h4>
                    <p class="card-text">
                        {{ad.content | raw}}
                    </p>
                    <a href="{{ url }}" class="btn btn-primary float-right">En savoir plus</a>

                </div>
            </div>

        </div>