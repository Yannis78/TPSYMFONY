{% extends 'admin/base.html.twig' %}

{% block title %}Adminisatrtion des articles{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">
        Gestion des articles 
        <a class="btn btn-primary float-right" href="{{ path('admin_ads_create') }}" role="button"><i class="fas fa-plus"></i> &nbsp;Cr√©er un article</a>
    </h1> 
    <table class="table table-hover">
        <thead>
            <tr>
                <th><h6>Id</h6></th>
                <th><h6>Titre</h6></th>
                <th><h6>Prix</h6></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {% for ad in ads %}
            <tr>
                <td>{{ad.id}}</td>
                <td>{{ad.title}}</td>
                <td><span class="badge badge-primary rounded">{{ad.price}}</span></td>
                <td>
                    <a href="{{path('admin_ads_edit', {'id': ad.id})}}" class="btn btn-primary"><is class="fas fa-edit"></is></a>
                    <a href="{{path('admin_ads_delete', {'id': ad.id})}}" class="btn btn-danger" onclick="return confirm(`Voulez vous vraiment supprimer l'article : {{ad.title}} ?`)"><is class="fas fa-trash"></is></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}