{% extends "admin/base.html.twig" %}

{% block title %}Modification d'une annonce{% endblock %}

{% form_theme form 'admin/ad/_collection.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Modifier l'annonce : {{ ad.title }}</h1>

        {{ form_start(form) }}
           

        {{ form_widget(form)}}
           
        <button type="submit" class="btn btn-primary">Modifier l'annonce</button>
        <a class="btn btn-danger" href="{{ path('admin_ads_index') }}" role="button"> <i class="fas fa-arrow-left"></i> &nbsp; Annuler</a>
        
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/ad.js"></script>
{% endblock %}